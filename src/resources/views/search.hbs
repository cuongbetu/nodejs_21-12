<div class="container">
    <div class="row">
        <div class="col">
            <div class="search-form mt-4">
                <form method="POST" action="/search">
                    <div class="form-group">
                        <label for="search-input" class="form-label">Từ khóa</label>
                        <input type="text" name="q" class="form-control" placeholder="Nhập từ khóa...">
                    </div>
                    <div class="form-group">
                        <label for="gender-select" class="form-label">Giới tính</label>
                        <select name="gender" class="form-control" id="gender-input">
                            <option value="0">--Chọn giới tính--</option>
                            <option value="male">Nam</option>
                            <option value="female">Nữ</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </form>
            </div>
        </div>
    </div>
</div>